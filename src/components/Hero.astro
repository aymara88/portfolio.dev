---
const personalImageAlt = "Miguel Ángel";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import "../styles/logo.css"; // Ensure you have a CSS file for styling
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/me.png"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/aymara-sanchez-padilla/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy aysan
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-teal-300 [&>strong]:text-teal-600 [&>strong]:font-semibold dark:text-gray-300"
  >
    +8 años de experiencia. <strong
      >Ingeniero de Software</strong
    > de España 🇪🇸. Especializado en el desarrollo de aplicaciones web
    únicas.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:aymarasanchez88@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/aymara-sanchez-padilla/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
  <div class="logo">
    <span class="brackets">&lt;</span>AySan<span class="brackets">/&gt;</span>
  </div>
</div>
